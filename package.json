{
  "name": "todo-scanner",
  "displayName": "%todoScanner.title%",
  "description": "Scan and manage TODO, FIXME, HACK, and IDEA comments efficiently.",
  "publisher": "miguelsignes",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "icon": "media/icon.png",
  
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:todoScanner.showTodos",
    "onView:todoScannerView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoScanner",
          "title": "TODOs",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "todoScanner": [
        {
          "id": "todoScannerView",
          "name": "%todoScanner.title%",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "todoScanner.showTodos",
        "title": "%todoScanner.listTitle%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miguelsignes/todo-scanner"
  },
  "bugs": {
    "url": "https://github.com/miguelsignes/todo-scanner/issues"
  },
  "homepage": "https://github.com/miguelsignes/todo-scanner#readme",
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}
